<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DotnetMauiApp.Views.ProductPage"
             Title="Products">
    <ScrollView HorizontalScrollBarVisibility="Always">
        <VerticalStackLayout Spacing="10">
            <Label Text="Tambah Produk"/>
            <Entry x:Name="TextEditor"
                Text="{Binding Text}" Placeholder="Masukkan Nama Produk"/>
            <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                <Button Text="Save" Clicked="SaveButton_Clicked" />
                <Button Text="Delete" Clicked="DeleteButton_Clicked" />
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>