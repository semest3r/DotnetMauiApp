<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DotnetMauiApp.Views.ResetDatabasePage"
             Shell.FlyoutBehavior="Disabled"
             Shell.TabBarIsVisible="False">
    <VerticalStackLayout Spacing="16" Padding="0,80,0,0">
        <Label 
            Text="Reset Database"
            TextColor="Black"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <HorizontalStackLayout Spacing="16" HorizontalOptions="Center">
            <Button Text="Yes" Clicked="Yes_Clicked" WidthRequest="120" />
            <Button Text="Cancel" Clicked="Cancel_Clicked" WidthRequest="120"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>