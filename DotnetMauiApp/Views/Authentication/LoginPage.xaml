<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DotnetMauiApp.Views.Authentication.LoginPage"
             >
    <ContentPage.Resources>
        <Style TargetType="Label" Class="LabelStyle">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="TextColor" Value="{StaticResource Error}" />
        </Style>
    </ContentPage.Resources>
        <VerticalStackLayout WidthRequest="600">
        <Label 
            Text="Login"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <VerticalStackLayout Spacing="10">
            <Label Text="Username" FontSize="14"/>
            <Border StrokeShape="RoundRectangle 4,4,4,4">
                <Entry Placeholder="Username" />
            </Border>
        </VerticalStackLayout>
        <VerticalStackLayout Spacing="10">
            <Label Text="Password"/>
            <Entry IsPassword="True" Placeholder="Password"/>
        </VerticalStackLayout>
        <Button Text="Login"/>
    </VerticalStackLayout>
</ContentPage>