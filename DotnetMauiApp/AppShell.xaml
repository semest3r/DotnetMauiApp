<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DotnetMauiApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:DotnetMauiApp.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="DotnetMauiApp"
    BackgroundColor="{StaticResource Primary}"
   >
    <FlyoutItem Title="Flyout One">
        <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:MainPage}"
        Route="MainPage" />
    </FlyoutItem>
    <FlyoutItem Title="Flyout Two">
        <Tab Title="Product">
            <ShellContent 
            Title="Product"
            ContentTemplate="{DataTemplate views:ProductPage}"
            Route="ProductPage"
            />
        </Tab>
        <Tab Title="Category">
            <ShellContent 
            Title="Category"
            ContentTemplate="{DataTemplate views:CategoryPage}"
            Route="CategoryPage"
            />
        </Tab>
        <Tab Title="Settings">
            <ShellContent 
            Title="Category"
            ContentTemplate="{DataTemplate views:CategoryPage}"
            Route="CategoryPage"
            />
        </Tab>
    </FlyoutItem>
</Shell>
